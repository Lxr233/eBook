<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/fragment_book_scroll"
    android:background="#F2F2F2"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_book_layout"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#E4E4E4"
            android:id="@+id/fragment_book_recent"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"></LinearLayout>

        <com.example.administrator.ebook.component.MyGridView
            android:id="@+id/fragment_book_gridview"
            android:gravity="center"
            android:verticalSpacing="23dp"
            android:horizontalSpacing="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/fragment_book_recent"

            android:stretchMode="none"
            android:scrollbars="none"
            android:paddingTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:numColumns="3">

        </com.example.administrator.ebook.component.MyGridView>




    </RelativeLayout>

</ScrollView>
